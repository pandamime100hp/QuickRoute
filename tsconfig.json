{
    "compilerOptions": {
      /* Language and Environment */
      "target": "ES2022",
      "lib": ["ES2022"],
      "module": "NodeNext",
      "types": ["node", "jest"],
  
      /* Strict Type-Checking */
      "strict": true,
      "noImplicitAny": true,
      "strictNullChecks": true,
      "strictFunctionTypes": true,
  
      /* Module Resolution */
      "baseUrl": ".",
      "rootDir": "./src",
      "outDir": "./dist",
      "paths": {
        "*": ["*", "*.js"]
      },
      "resolveJsonModule": true,
  
      /* Interop Constraints */
      "esModuleInterop": true,
      "forceConsistentCasingInFileNames": true,
  
      /* Output Control */
      "declaration": true,
      "sourceMap": true,
      "inlineSources": true,
  
      /* Diagnostic Output */
      "skipLibCheck": true,
      "allowJs": true
    },
    "include": [
      "src/**/*.ts",
      "eslint.config.ts",
      "jest.config.ts"
    ],
    "exclude": [
      "node_modules",
      "dist",
      "__tests__",
      "**/*.spec.ts",
      "jest.config.ts",
      "eslint.config.ts"
    ]
  }