{
    "compilerOptions": {
      /* Language and Environment */
      "target": "ES2022",
      "lib": ["ES2022"],
      "module": "NodeNext",
      "moduleResolution": "NodeNext",
  
      /* Strict Type-Checking */
      "strict": true,
      "noImplicitAny": true,
      "strictNullChecks": true,
      "strictFunctionTypes": true,
  
      /* Module Resolution */
      "baseUrl": ".",
      "paths": {
        "@/*": ["./src/*"]
      },
      "rootDir": "./src",
      "outDir": "./dist",
  
      /* Interop Constraints */
      "esModuleInterop": true,
      "forceConsistentCasingInFileNames": true,
  
      /* Output Control */
      "declaration": true,
      "sourceMap": true,
      "inlineSources": true,
  
      /* Diagnostic Output */
      "skipLibCheck": true,
      "allowJs": true
    },
    "include": [
      "src/**/*.ts",
      "__tests__/**/*.ts",
      "eslint.config.ts",
      "jest.config.ts"
    ],
    "exclude": [
      "node_modules",
      "dist",
      "**/*.spec.ts"
    ]
  }